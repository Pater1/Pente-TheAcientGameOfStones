<Application x:Class="Pente.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pente"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ImageBrush x:Key="BoardBrush" ImageSource="Images/LabelBackground.png"/>
        <SolidColorBrush x:Key="StoneBrushWhite" Color="White"/>
        <SolidColorBrush x:Key="StoneBrushBlack" Color="Black"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#cc391c"/>
        <SolidColorBrush x:Key="TextColor" Color="#ede6e3"/>
        <SolidColorBrush x:Key="AccentColor" Color="#5bc3eb"/>
    </Application.Resources>
</Application>
