<UserControl x:Class="Pente.UserControls.GameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pente.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="725">
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <UniformGrid Grid.Column="0" Height="19" Width="19">

        </UniformGrid>
        <StackPanel Grid.Column="1">
            <Label Content="Pente" Foreground="{StaticResource TextColorA}"
                   FontSize="36" HorizontalContentAlignment="Center"
            />
        </StackPanel>
    </Grid>
</UserControl>
