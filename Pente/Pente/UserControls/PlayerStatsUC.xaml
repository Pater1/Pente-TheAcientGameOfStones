<UserControl x:Class="Pente.UserControls.PlayerStatsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pente.UserControls"
             mc:Ignorable="d">
    <StackPanel>
        <Label x:Name="MainLabel" Content="Player 1 Stats:" FontSize="24"
        />
        <StackPanel Orientation="Horizontal">
            <Label Content="Captures: " FontSize="18"
                   HorizontalContentAlignment="Right"
                   Margin="50 0 0 0"
            />
            <Label x:Name="Player1Captures"
                   Content="0" FontSize="18"
                   HorizontalContentAlignment="Left"
            />
        </StackPanel>
    </StackPanel>
</UserControl>
